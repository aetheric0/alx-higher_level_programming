#!/usr/bin/python3
"""
The Square Module
"""


from .rectangle import Rectangle

class Square(Rectangle):
    """
    Inherits from the rectangle class
    """

    def __init__(self, size, x=0, y=0, id=None):
        id = id
        super().__width = size
        super().__height = size
        super().__x = x
        super().__y = y

    def __str__(self):
        return '[Square] ({}) {}/{} - {}]'.format(super().id, super().x,
                                                  super().y, super().width)
